    "version": "0.2.0",
    "configurations": [
        {
            "name":"Debug Shit",
            "type":"node",
            "request":"launch",
            "protocol":"inspector",
            "cwd":"${workspaceRoot}",
            "runtimeExecutable":"${workspaceRoot}/node_modules/.bin/ts-node-dev",
            "args":[
                "--transpileOnly",
                "./src/index.ts"
            ],
            "skipFiles": [
                "${workspaceFolder}/node_modules/**/*.js",
                "<node_internals>/**/*.js"
            ],
            "restart":true
         }
    ]
}