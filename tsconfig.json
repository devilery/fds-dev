{
   "compilerOptions": {
      "strict": true,
      "esModuleInterop": true,
      "lib": [
         "es5",
         "es6",
         "ESNext"
      ],
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "node",
      // "outDir": "./build",
      "noEmit": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "allowJs": true,
      "strictPropertyInitialization": false
   },
   "include": [
    "typings",
    "src"
  ],
}
